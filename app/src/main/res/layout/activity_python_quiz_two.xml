<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#363636"
    android:padding="10dp"
    tools:context=".PythonQuizTwo">

    <TextView
        android:id="@+id/idTVQuestionAttempted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_gravity="end"
        android:gravity="center"
        android:text="0/10"
        android:textAlignment="center"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/idTVQuestionItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Question: 0/10"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:background="@drawable/questionitem_con"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/quiz_con"
        android:padding="20dp">
        <TextView
            android:id="@+id/idQuizTwoQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Question"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idQuizOneQuestion"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:background="@drawable/quiz_con">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/idBtnOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="@drawable/option_button"
            android:text="Option 1"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/idBtnOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="@drawable/option_button"
            android:text="Option 2"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/idBtnOption3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="Option 3"
            android:background="@drawable/option_button"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/idBtnOption4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="@drawable/option_button"
            android:text="Option 4"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/white"/>


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/idBtnNext"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:background="@drawable/option_buttonfalse"
        android:gravity="center"
        android:padding="5dp"
        android:text="Next"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:enabled="false"
        android:textColor="@color/white"/>

</LinearLayout>